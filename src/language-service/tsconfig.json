{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "outDir": "dist",
    "rootDir": "src",
    "lib": ["ES2020"],
    "sourceMap": true,
    "skipLibCheck": true /* todo: remove when WebSocket error is solved*/,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "declaration": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true
  },
  "include": ["src/**/*.ts", "src/**/*.json"]
}
